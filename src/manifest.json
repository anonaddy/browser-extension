{
  "manifest_version": 2,
  "name": "AnonAddy",
  "author": "Will Browning",
  "description": "Open-source Anonymous Email Forwarding",
  "homepage_url": "https://anonaddy.com",
  "version": "1.0.14",
  "icons": {
    "48": "img/icon.png",
    "96": "img/icon@2x.png"
  },
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_title": "AnonAddy",
    "default_popup": "app.html"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_security_policy": "script-src 'self' ; object-src 'self'",
  "applications": {
    "gecko": {
      "id": "browser-extension@anonaddy"
    }
  }
}